<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/expanded"
        motion:constraintSetEnd="@id/collapsed"
        motion:duration="300"
        motion:motionInterpolator="easeInOut">



        <OnSwipe
            motion:touchRegionId="@+id/fragmentContainer"
            motion:maxAcceleration="200"
            motion:dragDirection="dragDown"

         />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="0"
                motion:motionTarget="@id/fragmentContainer"/>

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="70"
                motion:motionTarget="@id/fragmentContainer"/>

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="100"
                motion:motionTarget="@id/fragmentContainer"/>


        </KeyFrameSet>

    </Transition>


    <Transition
        motion:constraintSetEnd="@id/expanded"
        motion:constraintSetStart="@id/collapsed"
        motion:duration="300"
        motion:motionInterpolator="easeInOut">



        <OnSwipe
            motion:touchRegionId="@+id/fragmentContainer"
            motion:maxAcceleration="200"
            motion:dragDirection="dragUp"
            />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="0"
                motion:motionTarget="@id/fragmentContainer"/>

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="70"
                motion:motionTarget="@id/fragmentContainer"/>

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="100"
                motion:motionTarget="@id/fragmentContainer"/>


        </KeyFrameSet>

    </Transition>
    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/fragmentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:customDimension="0dp"
                motion:attributeName="radius" />
        </Constraint>





    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@+id/fragmentContainer"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_55sdp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent">


            <CustomAttribute
                motion:customDimension="@dimen/_20sdp"
                motion:attributeName="radius" />

        </Constraint>





    </ConstraintSet>

</MotionScene>
